{
  "name": "SatsLegacy",
  "version": "1.7.0",
  "description": "Sovereign Bitcoin Inheritance - No custody, no fees, no third parties",
  "main": "electron/main.cjs",
  "author": {
    "name": "SatsLegacy",
    "email": "support@satslegacy.io"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "vite build && electron-builder --linux",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:fixes": "npx tsx scripts/test-miniscript-fixes.ts",
    "test:addresses": "npx tsx scripts/test-vault-addresses.ts",
    "test:regtest": "docker compose -f docker-compose.regtest.yml up -d && npx tsx scripts/regtest/run-regtest-tests.ts ; docker compose -f docker-compose.regtest.yml down"
  },
  "dependencies": {
    "@bitcoinerlab/miniscript": "^1.4.3",
    "bip32": "^5.0.0",
    "bitcoinjs-lib": "^7.0.1",
    "buffer": "^6.0.3",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^6.9.1",
    "socks-proxy-agent": "^8.0.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "bip39": "^3.1.0",
    "concurrently": "^8.2.0",
    "ecpair": "^3.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tiny-secp256k1": "^2.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.SatsLegacy.app",
    "productName": "SatsLegacy",
    "copyright": "Copyright Â© 2026 SatsLegacy",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "src/vault",
        "to": "vault",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "build/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "${env.APPLE_TEAM_ID}"
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icons",
      "category": "Finance",
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": null
  }
}
